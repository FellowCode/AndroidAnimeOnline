<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/text</item>
        <item name="iconColor">@color/icon</item>
        <item name="backgroundColor">@color/background</item>
        <item name="dividerColor">@color/divider</item>
        <item name="toolbarTextColor">@color/toolbarText</item>
        <item name="recyclerBg">@color/recyclerBg</item>
    </style>

    <style name="DarkTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="iconColor">@color/dark_icon</item>
        <item name="backgroundColor">@color/dark_background</item>
        <item name="dividerColor">@color/dark_divider</item>
        <item name="toolbarTextColor">@color/dark_toolbarText</item>
        <item name="recyclerBg">@color/dark_recyclerBg</item>
    </style>

    <style name="AnimeFieldTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>
    <style name="AnimeFieldValue">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingStart">5dp</item>
    </style>

    <style name="SearchToolBar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:editTextColor">@color/toolbarText</item>
        <item name="android:textColorHint">@color/searchHint</item>
        <item name="android:tint">@color/toolbarText</item>
    </style>

    <style name="ChangeEpisodeBtns">
        <item name="android:background">@drawable/watch_btn</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

</resources>
