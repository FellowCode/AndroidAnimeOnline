<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#5848AD" android:endColor="#2E218B" android:angle="-90"/>
            <stroke android:width="2dp" android:color="#233769"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:startColor="#322672" android:endColor="#292144" android:angle="-90"/>
            <stroke android:width="2dp" android:color="#233769"/>
        </shape>
    </item>
</selector>