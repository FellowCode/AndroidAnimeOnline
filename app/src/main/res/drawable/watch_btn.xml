<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#4E93C7" android:endColor="#1757A7" android:angle="-90"/>
            <stroke android:width="2dp" android:color="#233769"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:startColor="#2F579B" android:endColor="#1A3886" android:angle="-90"/>
            <stroke android:width="2dp" android:color="#233769"/>
        </shape>
    </item>
</selector>